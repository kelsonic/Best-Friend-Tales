<div class="row">
  <div class="col s12 center pinky-text">
    <h2>Add Your Pet</h2>
  </div>
</div>

<%= erb :errors %>

<div class="row">
  <form class="col s12 m8 offset-m2 l6 offset-l3" action="/users/<%= @user.id %>/pets" method="post">

    <div class="input-field col s12">
      <input name="pet[name]" type="text" class="validate" length="50">
      <label for="name">Pet Name</label>
    </div>

    <div class="input-field col s12">
      <select class="browser-default">
        <option value="" disabled selected>Animal Type</option>
        <option name="pet[animal]" value="dog">Dog</option>
        <option name="pet[animal]" value="cat">Cat</option>
        <option name="pet[animal]" value="marsupial">Marsupial</option>
        <option name="pet[animal]" value="bird">Bird</option>
        <option name="pet[animal]" value="lizard">Lizard</option>
        <option name="pet[animal]" value="exotic">Exotic</option>
      </select>
      <label></label>
    </div>

    <div class="input-field col s12">
      <select class="browser-default">
        <option value="" disabled selected>Gender</option>
        <option name="pet[sex]" value="male">Male</option>
        <option name="pet[sex]" value="female">Female</option>
      </select>
      <label></label>
    </div>

    <div class="input-field col s12">
      <select class="browser-default">
        <option value="" disabled selected>Mixed breeds?</option>
        <option name="pet[mix]" value="yes">Yes</option>
        <option name="pet[mix]" value="no">No</option>
      </select>
      <label></label>
    </div>

    <div class="input-field col s12">
      <input name="pet[breeds]" type="text" class="validate">
      <label for="breeds">Breeds</label>
    </div>

    <div class="input-field col s4 offset-s4">
      <input name="pet[age]" type="text" class="validate">
      <label for="age">Age</label>
    </div>

    <div class="input-field col s12">
      <input name="image" type="text" class="validate">
      <label for="image">Image URL</label>
    </div>

    <div class="input-field col s12">
      <textarea id="description" name="pet[description]" class="materialize-textarea validate"></textarea>
      <label for="description">Pet Description</label>
    </div>

    <div class="input-field col s12 center">
      <button class="btn waves-effect waves-purple light-green" type="submit">Add Pet
        <i class="material-icons right">send</i>
      </button>
    </div>

  </form>
</div>

