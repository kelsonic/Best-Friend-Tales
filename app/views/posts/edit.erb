<div class="row">
  <div class="col s12 center pinky-text">
    <h2>Edit Your Post</h2>
  </div>
</div>

<div class="row">
  <form class="col s12 m8 offset-m2 l6 offset-l3" action="/users/<%=current_user.id%>/posts/<%=post.id%>" method="post">
    <input type='hidden' name='_method' value='put'>


    <div class="input-field col s12">
      <input autofocus="true" name="post[title]" type="text" class="validate" length="75" value="<%= post.title %>">
      <label for="last_name">Title</label>
    </div>

    <div class="input-field col s12">
    <input name="post[description]" type="text" class="validate" length="150" value="<%= post.description %>">
      <label for="username">Description</label>
    </div>

    <div class="input-field col s12">
      <input name="image" type="text" class="validate" value="<%= post.images.first.name %>">
      <label for="image">Image URL</label>
    </div>

    <div class="input-field col s12">
      <textarea name="post[body]" class="materialize-textarea" class="validate" length="5000" ><%= post.body %></textarea>
      <label for="textarea1">Post Message</label>
    </div>

    <div class="row center">
      <button class="btn waves-effect waves-purple water-green" type="submit">Edit Your Post
        <i class="material-icons right">send</i>
      </button>
    </div>

  </form>
</div>
