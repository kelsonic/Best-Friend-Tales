<div class="row">
  <div class="col s12 center pinky-text">
    <h3><%= @post.title%></h2>
    </div>
  </div>

  <div class="col s12 center">
    <a href="/users/<%= @post.user.id %>">
      <h4>Created by</h4>
      <p class="pinky-text"><img src="<%= @post.user.images.last.name %>" class="center tiny-img"> <%= @post.user.username %></p>
    </a>
  </div>

  <article>
    <% if @post.images %>
    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3 center pinky-text text-ligten-2 ">
        <img class="responsive-img z-depth-2" src="<%= @post.images.last.name %>">
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="col s12 m8 offset-m2">
        <p class="flow-text post-body z-depth-1"><%= @post.body %></p>
      </div>
    </div>
  </article>
  <section id="comments">
    <div class="row center">
      <div class="col s12 center pinky white-text">
        <h3>Comments</h3>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3 pinky-text">
        <ul class="collection">
          <% @post.comments.each do |comment| %>
            <li class="collection-item center">
              <%= comment.body %>
              <br/><br/>
              <a href="/users/<%= comment.user.id %>"><p><img src="<%= comment.user.images.last.name %>" class="circle tiny-img"></p>
              <p><%= comment.user.username%></p></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
    <div class="row center" id="post-buttons">
      <a id="add-comment" href='/users/<%= @user.id %>/posts/<%= @post.id %>/comments/new' class="waves-effect waves-purple btn light-green"><i class="material-icons left">cloud</i>Add a Comment</a>


      <%if @user.id == current_user.id %>
        <a id="edit-post" href='/users/<%= @user.id %>/posts/<%= @post.id %>/edit'class="waves-effect waves-light btn light-blue"><i class="material-icons left">settings</i>Edit Your Post</a>
      <% end %>
    </div>

