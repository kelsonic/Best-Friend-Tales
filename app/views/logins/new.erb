<div class="row">
  <div class="col s12">
    <h1 class="pinky-text center">Login</h1>
    <form class="col s12 m6 offset-m3 l4 offset-l4" action="/login" method="POST">
      <div class="row">
        <div class="input-field">
          <input id="username" type="text" name="username" class="validate" length="20">
          <label for="username">Username</label>
        </div>
        <div class="input-field">
          <input id="password" type="password" class="validate" name="password">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row center">
        <input type="submit" value="Login" class="btn btn-large waves-effect waves-purple light-green">
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col s12 center">
    <p>or</p>
    <p><a href="/users/new">Sign Up</a></p>
  </div>
</div>



