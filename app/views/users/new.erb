<div class="row">
  <div class="col s12 center pink-text text-ligten-2">
    <h2>Sign Up</h2>
  </div>
</div>

<div class="row">
  <form class="col s12" action="/users" method="post">

    <div class="input-field col s6">
      <input name="first_name" type="text" class="validate">
      <label for="first_name">First Name</label>
    </div>

    <div class="input-field col s6">
      <input name="last_name" type="text" class="validate">
      <label for="last_name">Last Name</label>
    </div>

    <div class="input-field col s12">
      <input name="image" type="password" class="validate">
      <label for="image">Image URL</label>
    </div>

    <div class="input-field col s12">
      <input name="password" type="password" class="validate">
      <label for="password">Password</label>
    </div>
    <div class="row">
      <div class="col center">
        <button class="btn waves-effect waves-light center" type="submit">Sign Up
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>

  </form>
</div>
