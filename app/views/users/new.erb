<div class="row">
  <div class="col s12 center pinky-text">
    <h2>Sign Up</h2>
  </div>
</div>

<%= erb :errors %>

<div class="row">
  <form class="col s12 m8 offset-m2 l6 offset-l3" action="/users" method="post">

    <div class="input-field col s6">
      <input name="user[first_name]" type="text" class="validate" length="50">
      <label for="first_name">First Name</label>
    </div>

    <div class="input-field col s6">
      <input name="user[last_name]" type="text" class="validate" length="75">
      <label for="last_name">Last Name</label>
    </div>

    <div class="input-field col s12">
      <input name="user[username]" type="text" class="validate" length="20">
      <label for="username">Username</label>
    </div>

    <div class="input-field col s12">
      <input name="image" type="text" class="validate">
      <label for="image">Image URL</label>
    </div>

    <div class="input-field col s12">
      <input name="user[password]" type="password" class="validate">
      <label for="password">Password</label>
    </div>
    <div class="row center">
      <button class="btn waves-effect waves-purple water-green" type="submit">Sign Up
        <i class="material-icons right">send</i>
      </button>
    </div>

  </form>
</div>

