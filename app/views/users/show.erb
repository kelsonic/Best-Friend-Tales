<% if @user.images %>
  <div class="row">
    <div class="col s12 center pinky-text text-ligten-2 ">
      <img class="responsive-img" src="<%= @user.images.first.name %>">
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h2><%= @user.username%>'s Profile</h2>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%>'s Posts</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.posts.each do |post| %>
    <p class="collection-item"><a href="/users/<%= @user.id %>/posts/<%= post.id %>" ><%=  post.title %></a></br>
    <%= post.description %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%>'s Comments</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.comments.each do |comment| %>
    <a href="/user/<%= @user.id %>/posts/<%= comment.post_id %>/comments/<%= comment.id %>" class="collection-item"><%=comment.body%></a>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%>'s Pets</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.pets.each do |pet| %>
    <a href="/pets/<%= pet.id %>" class="collection-item"><%= pet.name%></a>
    <% end %>
  </div>
</div>
