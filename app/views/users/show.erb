<div class="row">
  <div class="col s12 center pink-text text-ligten-2">
    <h2><%= @user.username%> Profile</h2>
  </div>
</div>

<div class="row">
  <div class="col s12 center pink-text text-ligten-2">
    <h2><%= @user.username%> Posts</h2>

    <div class="collection">
      <% @user.posts.each do |post| %>
        <a href="/post/<%= post.id %>" class="collection-item">post.title</a>
      <% end %>
    </div>
  </div>
</div>
