<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h2><%= @user.username%> Profile</h2>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%> Posts</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.posts.each do |post| %>
    <p class="collection-item"><a href="/posts/<%= post.id %>" ><%=  post.title %></a></br>
    <%= post.description %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%> Comments</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.comments.each do |comment| %>
    <a href="/comments/<%= comment.id %>" class="collection-item"><%=comment.body%></a>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12 center pinky-text text-ligten-2">
    <h4><%= @user.username%>'s Pets</h2>
  </div>
</div>

<div class="row">
  <div class="collection">
    <% @user.pets.each do |pet| %>
    <a href="/pets/<%= pet.id %>" class="collection-item"><%= pet.name%></a>
    <% end %>
  </div>
</div>
