<% if @user.images %>
  <div class="row">
    <div class="col s12 m8 offset-m2 l6 offset-l3 center pinky-text text-ligten-2 ">
      <img class="responsive-img profile-img" src="<%= @user.images.first.name %>">
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col s12 center pinky-text text-ligten-2">
      <h2><%= @user.username%></h2>
      <h3 class="light-blue-text">Pets Page</h3>
    </div>
  </div>

  <div class="divider"></div>

  <div class="row">
    <div class="center col s6 center pinky-text text-ligten-2">
      <p class="flow-text">Your Current Pets</p class="flow-text">
      <%= erb :"users/_pets", layout: false, locals: {user: @user, pets: @pets, yours: true} %>
    </div>

    <div class="center col s6 center pinky-text text-ligten-2">
      <p class="flow-text">Desired Adoptable Pets</p class="flow-text">
      <%= erb :"users/_pets", layout: false, locals: {user: @user, pets: @pets, yours: false} %>
    </div>
  </div>
</div>
